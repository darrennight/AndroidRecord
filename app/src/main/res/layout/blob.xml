<com.hjq.shape.layout.ShapeLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"

    android:orientation="horizontal"
    android:gravity="center"

    app:shape_strokeWidth="1dp"
    app:shape_radius="30dp"

    app:shape_strokeSelectedColor="@color/yellow"
    app:shape_strokeColor="@color/white"
    android:id="@+id/stv_layout"
    >



    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="@dimen/blob_text_size"
        android:textStyle="bold"
        android:gravity="center"


        app:shape_textSelectedColor="@color/red"
        app:shape_textColor="@color/black"


        />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/e1"
        android:layout_marginLeft="1dp"
        android:visibility="gone"/>


</com.hjq.shape.layout.ShapeLinearLayout>
