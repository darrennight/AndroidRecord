<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_lin_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LinearSnapHelper垂直"
        />

    <Button
        android:id="@+id/btn_lin_hor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LinearSnapHelper水平"
        />

    <Button
        android:id="@+id/btn_page_hor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="page_Snap_viewpager效果"
        />

    <Button
        android:id="@+id/btn_gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="itemGravity自定义"
        />
</LinearLayout>