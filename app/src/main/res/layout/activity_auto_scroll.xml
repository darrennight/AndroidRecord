<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hao.androidrecord.activity.autoscrollview.AutoScrollView
        android:id="@+id/asView_main"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

    app:singleScrollWidth="2"
    app:singleDuration="50"
    app:startDuration="3500"
    app:endDuration="5000"
    app:finishState="end"
    app:repeatAble="true">

        <!--子view要比外面的scrollview宽度宽才行-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adfadsfadsfadsfaadfadsfadsfadsfaadfadsfadsfadsfaadfadsfadsfadsfa"/>


</com.hao.androidrecord.activity.autoscrollview.AutoScrollView>
</LinearLayout>

  <!--  &lt;!&ndash; 单次滚动距离  默认值为2px &ndash;&gt;
    app:singleScrollWidth="2"
    &lt;!&ndash; 单次滚动间隔  默认值为50毫秒 &ndash;&gt;
    app:singleDuration="50"
    &lt;!&ndash; 开始滚动时停顿时长  默认值为3800毫秒 &ndash;&gt;
    app:startDuration="3500"
    &lt;!&ndash; 滚动完成时停顿时长  默认值为5000毫秒 &ndash;&gt;
    app:endDuration="5000"
    &lt;!&ndash; 仅在repeatAble=false时生效; 滚动完成之后是停在尾部<end>还是头部<start>  默认值为尾部 &ndash;&gt;
    app:finishState="end"
    &lt;!&ndash; 是否重复滚动  默认值为true &ndash;&gt;
    app:repeatAble="true">-->