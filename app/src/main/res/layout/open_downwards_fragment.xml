<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/info_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ui_margin"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"
            android:text="@string/open_downwards_fragment_info"/>
    </ScrollView>

    <com.nambimobile.widgets.efab.ExpandableFabLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.nambimobile.widgets.efab.Overlay
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:overlay_orientation="portrait"/>
        <com.nambimobile.widgets.efab.ExpandableFab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginTop="@dimen/ui_margin_medium"
            android:layout_marginStart="@dimen/ui_margin_medium"
            android:layout_marginLeft="@dimen/ui_margin_medium"
            app:efab_orientation="portrait"
            app:efab_fabOptionPosition="below"
            app:efab_iconAnimationRotationDeg="135"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="portrait"
            app:fab_icon="@drawable/ic_flight_white_24dp"
            app:label_text="Portrait Option 1"
            app:label_position="right"
            app:label_translationXPx="-100"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="portrait"
            app:fab_icon="@drawable/ic_train_white_24dp"
            app:label_text="Portrait Option 2"
            app:label_position="right"
            app:label_translationXPx="-100"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="portrait"
            app:fab_icon="@drawable/ic_walk_white_24dp"
            app:label_text="Portrait Option 3"
            app:label_position="right"
            app:label_translationXPx="-100"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="portrait"
            app:fab_icon="@drawable/ic_car_white_24dp"
            app:label_text="Portrait Option 4"
            app:label_position="right"
            app:label_translationXPx="-100"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="portrait"
            app:fab_icon="@drawable/ic_bike_white_24dp"
            app:label_text="Portrait Option 5"
            app:label_position="right"
            app:label_translationXPx="-100"/>

        <com.nambimobile.widgets.efab.Overlay
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:overlay_orientation="landscape"/>
        <com.nambimobile.widgets.efab.ExpandableFab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginTop="@dimen/ui_margin_medium"
            android:layout_marginLeft="@dimen/ui_margin_medium"
            android:layout_marginStart="@dimen/ui_margin_medium"
            app:efab_orientation="landscape"
            app:efab_fabOptionPosition="below"
            app:efab_iconAnimationRotationDeg="135"
            app:efab_color="@color/randomColor4"/>
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="landscape"
            app:fab_icon="@drawable/ic_event_white_24dp"
            app:fab_color="@color/randomColor4"
            app:label_text="Landscape Option 1"
            app:label_position="right"
            app:label_translationXPx="-100" />
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="landscape"
            app:fab_icon="@drawable/ic_lock_white_24dp"
            app:fab_color="@color/randomColor4"
            app:label_text="Landscape Option 2"
            app:label_position="right"
            app:label_translationXPx="-100" />
        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_orientation="landscape"
            app:fab_icon="@drawable/ic_note_white_24dp"
            app:fab_color="@color/randomColor4"
            app:label_text="Landscape Option 3"
            app:label_position="right"
            app:label_translationXPx="-100"/>
    </com.nambimobile.widgets.efab.ExpandableFabLayout>

</RelativeLayout>
